<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Anek Latin, Arial, sans-serif" />
      <mj-text color="#212B36" font-size="15px" line-height="22px" />
      <mj-button background-color="#000000" color="#ffffff" font-weight="700" font-size="16px" border-radius="8px" />
      <mj-section padding="0" />
      <mj-column padding="0" />
        <mj-text padding="0" line-height="1.45" color="#212B36" />
     <mj-button background-color="#000000" color="#ffffff" font-weight="700" font-size="16px" border-radius="8px" />
    </mj-attributes>
    <mj-preview>⏱️ Quote by {{deal.dealDeadline}} • 📍 Delivery location {{deal.customerLocation}} • 🗓️ Delivery Date {{deal.vehicle.dateRequired}} • </mj-preview>
  </mj-head>

  <mj-body background-color="#fafafa">
  <mj-include path="../partials/header.mjml" />
    <mj-section padding="24px 24px 0 24px" background-color="#ffffff">
      <mj-column>
        <mj-text padding="0 0 16px 0">Hi {{dealer.firstName}},</mj-text>
        <mj-text>A new customer enquiry is ready for you to review and quote on.</mj-text>
       </mj-column>
      </mj-section>

        <!-- Deal details (above deadline) -->
        <mj-include path="../partials/deal-details.mjml" />

        <mj-include path="../partials/footer.mjml" />

      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
